rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== TEMPORARY DEVELOPMENT RULES ====================
    // These are relaxed for development/testing. MUST be replaced with proper
    // authentication before deploying to production.
    // For production, implement Cloud Functions for secure authentication.
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isTenant(roomNo) {
      return isSignedIn() && request.auth.token.roomNo == roomNo;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Temporary: Allow all reads for development
    // TODO: Replace with proper authentication before production
    match /tenants/{document=**} {
      allow read, write: if true;
    }
    
    match /announcements/{document=**} {
      allow read: if true;
      allow write: if true;
    }
    
    match /tickets/{document=**} {
      allow read, write: if true;
    }
    
    match /soas/{document=**} {
      allow read, write: if true;
    }

    match /meter_readings/{document=**} {
      allow read, write: if true;
    }
    
    match /admin/{document=**} {
      allow read, write: if true;
    }
  }
}
